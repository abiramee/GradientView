<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="GradientView">
        <attr name="start_color" format="string|color"/>
        <attr name="center_color" format="string|color"/>
        <attr name="end_color" format="string|color"/>
        <attr name="orientation" format="string">
            <enum name="TOP_BOTTOM" value="0" />
            <enum name="TR_BL" value="1" />
            <enum name="RIGHT_LEFT" value="2" />
            <enum name="BR_TL" value="3" />
            <enum name="BOTTOM_TOP" value="4"/>
            <enum name="BL_TR" value="5"/>
            <enum name="LEFT_RIGHT" value="6"/>
            <enum name="TL_BR" value="7"/>
        </attr>
        <attr name="background_image" format="reference"/>
        <attr name="corner_radius" format="dimension"/>
    </declare-styleable>
</resources>